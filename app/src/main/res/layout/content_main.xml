<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="#D1DEE0"
        tools:showIn="@layout/app_bar_main"
        tools:context=".view.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPruebaFirebase"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:layout_width="342dp"
            android:background="@drawable/fotofestival"
            android:onClick="onClickFestivales"
            android:layout_height="189dp"
            android:id="@+id/btnFestival" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/tvEnunciadoMain"
    />

    <ImageButton
            android:layout_width="342dp"
            android:background="@drawable/fotoconciertos"
            android:onClick="onClickConcierto"
            android:layout_height="189dp"
            android:id="@+id/btnConcierto" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.547" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEnunciadoMain2"/>
    <TextView
            android:text="@string/mainFestivales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEnunciadoMain"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="20sp" android:textColorHighlight="#00E91111"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:fontFamily="casual"
            android:textStyle="bold"/>
    <TextView
            android:text="@string/mainConciertos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEnunciadoMain2"
            android:textSize="20sp" android:textColorHighlight="#00E91111"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:fontFamily="casual"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.551" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFestival" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>
