<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/photo_background_2"
        tools:context=".view.LoginActivity">

    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/tvEnunciadoEmail"
            android:textColor="#AFAFAF" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo"/>

    <EditText
            android:layout_margin="10dp"
            android:id="@+id/txtEmail"
            android:layout_width="394dp"
            android:layout_height="44dp"
            android:textColor="#FFFFFF"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEnunciadoEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <TextView
            android:text="ContraseÃ±a:"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:textColor="#AFAFAF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/tvEnunciadoPassword"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" android:layout_marginTop="10dp"/>

    <EditText
            android:layout_margin="10dp"
            android:id="@+id/txtPassword"
            android:layout_width="394dp"
            android:layout_height="44dp"
            android:ems="10"
            android:textColor="#FFFEFE"
            android:inputType="textPassword"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEnunciadoPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:onClick="onClickLogin"
            android:text="ENTRAR"
            android:layout_width="158dp"
            android:layout_height="72dp"
            android:id="@+id/btnLogin"
            android:textColor="#FFFFFF"
            android:background="@color/colorGray"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="138dp" android:layout_marginStart="138dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="123dp"
            android:layout_marginRight="123dp"
            android:layout_marginBottom="110dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:visibility="visible" android:textStyle="bold|italic"
            android:textAllCaps="false" tools:ignore="OnClick"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword" app:layout_constraintVertical_bias="0.73"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="138dp" app:srcCompat="@drawable/logo6png"
            android:id="@+id/ivLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp" android:layout_marginRight="2dp"/>
    <Button
            android:text="Registrarse"
            android:onClick="onClickRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister" android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@color/colorWhite"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textStyle="bold"
            android:typeface="serif" android:textAllCaps="false" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword" android:background="#2B0C30"
    />

</android.support.constraint.ConstraintLayout>